@model IEnumerable<Calcpad.web.Data.Models.SubscriptionPlan>

<h1>Subscription Plans</h1>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.Price</td>
        <td>
            <a asp-action="Order" asp-route-id="@item.Id">Order</a>
        </td>
    </tr>
    }
    </tbody>
</table>